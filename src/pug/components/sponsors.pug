- const sponsors = ['google', 'microsoft', 'airb', 'axure', 'apple', 'fb', 'nokia', 'oracle'];

section.section.sponsors 
    .container 
        h2 Our Sponsors
        .logos
            ul.logos-slide
                each imgName in sponsors 
                    li.sponsors__item
                        img(src = `@img/png/${imgName}.png` alt=`${imgName}`)
        button.btn.btn_brand(type="button", aria-label="Become a sponsor of the event") Become a Sponsor